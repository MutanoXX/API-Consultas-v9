<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MutanoX Premium Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            color: #e2e8f0;
            min-height: 100vh;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 20px;
        }

        header {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            padding: 24px;
            border-radius: 16px;
            margin-bottom: 24px;
            box-shadow: 0 8px 32px rgba(59, 130, 246, 0.2);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 16px;
        }

        .logo {
            font-size: 28px;
            font-weight: 700;
            color: white;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .logo-icon {
            width: 48px;
            height: 48px;
            background: rgba(255,255,255,0.2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .status-badge {
            display: flex;
            align-items: center;
            gap: 8px;
            background: rgba(255,255,255,0.15);
            padding: 10px 20px;
            border-radius: 24px;
            font-size: 14px;
            font-weight: 500;
        }

        .status-dot {
            width: 10px;
            height: 10px;
            background: #22c55e;
            border-radius: 50%;
            animation: pulse 2s ease-in-out infinite;
        }

        .status-dot.offline {
            background: #ef4444;
            animation: none;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.5; transform: scale(1.1); }
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 24px;
        }

        .card {
            background: rgba(30, 41, 59, 0.6);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        }

        .stat-card {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .stat-label {
            font-size: 13px;
            color: #94a3b8;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-value {
            font-size: 36px;
            font-weight: 700;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-change {
            font-size: 13px;
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .stat-change.positive {
            color: #22c55e;
        }

        .stat-change.negative {
            color: #ef4444;
        }

        .section {
            background: rgba(30, 41, 59, 0.6);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 24px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 12px;
        }

        .section-title {
            font-size: 20px;
            font-weight: 600;
            color: #e2e8f0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-title-icon {
            width: 32px;
            height: 32px;
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
        }

        .chart-container {
            position: relative;
            height: 300px;
            width: 100%;
        }

        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 24px;
            margin-bottom: 24px;
        }

        @media (max-width: 768px) {
            .charts-grid {
                grid-template-columns: 1fr;
            }
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            font-weight: 500;
            color: #94a3b8;
        }

        .form-select,
        .form-input {
            width: 100%;
            padding: 12px 16px;
            background: rgba(15, 23, 42, 0.5);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 10px;
            color: #e2e8f0;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .form-select:focus,
        .form-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
        }

        .form-input::placeholder {
            color: #64748b;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
        }

        .btn-primary:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }

        .btn-success {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
        }

        .cache-info {
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            border-radius: 10px;
            padding: 12px;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .cache-info-icon {
            font-size: 20px;
        }

        .cache-info-text {
            font-size: 13px;
            color: #22c55e;
        }

        .results-container {
            margin-top: 20px;
            max-height: 500px;
            overflow-y: auto;
        }

        .result-item {
            background: rgba(15, 23, 42, 0.5);
            border: 1px solid rgba(255,255,255,0.05);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 12px;
            transition: all 0.3s ease;
        }

        .result-item:hover {
            background: rgba(15, 23, 42, 0.8);
            border-color: rgba(59, 130, 246, 0.3);
        }

        .result-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .result-type {
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            padding: 4px 12px;
            border-radius: 6px;
        }

        .result-type.cpf {
            background: rgba(59, 130, 246, 0.2);
            color: #3b82f6;
        }

        .result-type.nome {
            background: rgba(139, 92, 246, 0.2);
            color: #8b5cf6;
        }

        .result-type.numero {
            background: rgba(34, 197, 94, 0.2);
            color: #22c55e;
        }

        .result-param {
            font-size: 16px;
            font-weight: 600;
            color: #e2e8f0;
            word-break: break-all;
        }

        .result-status {
            font-size: 12px;
            padding: 4px 12px;
            border-radius: 6px;
        }

        .result-status.success {
            background: rgba(34, 197, 94, 0.2);
            color: #22c55e;
        }

        .result-status.error {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
        }

        .result-time {
            font-size: 12px;
            color: #64748b;
        }

        .logs-container {
            max-height: 400px;
            overflow-y: auto;
            background: rgba(15, 23, 42, 0.5);
            border-radius: 12px;
            padding: 16px;
        }

        .log-item {
            display: grid;
            grid-template-columns: 100px 1fr 80px 80px;
            gap: 12px;
            padding: 10px 0;
            border-bottom: 1px solid rgba(255,255,255,0.05);
            font-size: 13px;
        }

        .log-item:last-child {
            border-bottom: none;
        }

        .log-type {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 12px;
        }

        .log-param {
            color: #94a3b8;
            font-family: monospace;
        }

        .log-status {
            text-align: center;
        }

        .log-status.success {
            color: #22c55e;
        }

        .log-status.error {
            color: #ef4444;
        }

        .log-time {
            color: #64748b;
            text-align: right;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #64748b;
        }

        .empty-state-icon {
            font-size: 48px;
            margin-bottom: 16px;
            opacity: 0.5;
        }

        .tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .tab {
            padding: 10px 20px;
            background: rgba(15, 23, 42, 0.5);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 10px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            color: #94a3b8;
            transition: all 0.3s ease;
        }

        .tab:hover {
            background: rgba(59, 130, 246, 0.1);
            color: #3b82f6;
        }

        .tab.active {
            background: linear-gradient(135deg, #3b82f6, #8b5cf6);
            color: white;
            border-color: transparent;
        }

        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(15, 23, 42, 0.5);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb {
            background: rgba(59, 130, 246, 0.5);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: rgba(59, 130, 246, 0.7);
        }

        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                align-items: flex-start;
            }

            .charts-grid {
                grid-template-columns: 1fr;
            }

            .log-item {
                grid-template-columns: 1fr;
                gap: 4px;
            }

            .log-type,
            .log-status,
            .log-time {
                text-align: left;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header>
            <div class="header-content">
                <div class="logo">
                    <div class="logo-icon">‚ö°</div>
                    <div>MutanoX Premium</div>
                </div>
                <div class="status-badge">
                    <div class="status-dot" id="statusDot"></div>
                    <span id="statusText">Conectado</span>
                </div>
            </div>
        </header>

        <!-- Stats Grid -->
        <div class="grid">
            <div class="card stat-card">
                <div class="stat-label">Total de Consultas</div>
                <div class="stat-value" id="totalQueries">0</div>
                <div class="stat-change positive">
                    <span>‚Üó</span>
                    <span>Tempo real</span>
                </div>
            </div>
            <div class="card stat-card">
                <div class="stat-label">Consultas CPF</div>
                <div class="stat-value" id="cpfQueries">0</div>
                <div class="stat-label" style="font-size: 11px; margin-top: 4px;">Cadastro de pessoas</div>
            </div>
            <div class="card stat-card">
                <div class="stat-label">Consultas Nome</div>
                <div class="stat-value" id="nameQueries">0</div>
                <div class="stat-label" style="font-size: 11px; margin-top: 4px;">Busca por nome</div>
            </div>
            <div class="card stat-card">
                <div class="stat-label">Consultas N√∫mero</div>
                <div class="stat-value" id="numberQueries">0</div>
                <div class="stat-label" style="font-size: 11px; margin-top: 4px;">Telefone</div>
            </div>
            <div class="card stat-card">
                <div class="stat-label">Taxa de Sucesso</div>
                <div class="stat-value" id="successRate">0%</div>
                <div class="stat-change" id="successChange">
                    <span>‚Üó</span>
                    <span>Excelente</span>
                </div>
            </div>
            <div class="card stat-card">
                <div class="stat-label">Uptime</div>
                <div class="stat-value" id="uptime">0s</div>
                <div class="stat-label" style="font-size: 11px; margin-top: 4px;">Tempo online</div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="charts-grid">
            <div class="section">
                <div class="section-header">
                    <div class="section-title">
                        <div class="section-title-icon">üìà</div>
                        Hist√≥rico de Consultas
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="historyChart"></canvas>
                </div>
            </div>

            <div class="section">
                <div class="section-header">
                    <div class="section-title">
                        <div class="section-title-icon">üìä</div>
                        Distribui√ß√£o por Tipo
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="distributionChart"></canvas>
                </div>
            </div>
        </div>

        <!-- API Tester -->
        <div class="section">
            <div class="section-header">
                <div class="section-title">
                    <div class="section-title-icon">üß™</div>
                    API Tester
                </div>
                <button class="btn btn-danger" onclick="clearCache()">üóëÔ∏è Limpar Cache</button>
            </div>

            <div id="cacheInfo" class="cache-info" style="display: none;">
                <span class="cache-info-icon">‚úÖ</span>
                <span class="cache-info-text">Dados carregados do cache local</span>
            </div>

            <div class="form-group">
                <label class="form-label">Tipo de Consulta</label>
                <select class="form-select" id="queryType" onchange="updatePlaceholder()">
                    <option value="cpf">üìÑ CPF</option>
                    <option value="nome">üë§ Nome</option>
                    <option value="numero">üì± N√∫mero</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label" id="paramLabel">CPF (apenas n√∫meros)</label>
                <input type="text" class="form-input" id="queryParam" placeholder="Digite o CPF..." autocomplete="off">
            </div>

            <button class="btn btn-primary" id="submitBtn" onclick="submitQuery()">
                <span>üîç</span>
                <span>Consultar</span>
            </button>

            <div class="results-container" id="resultsContainer">
                <div class="empty-state">
                    <div class="empty-state-icon">üìã</div>
                    <p>Os resultados das consultas aparecer√£o aqui</p>
                </div>
            </div>
        </div>

        <!-- Real-time Logs -->
        <div class="section">
            <div class="section-header">
                <div class="section-title">
                    <div class="section-title-icon">üìú</div>
                    Logs em Tempo Real
                </div>
                <div class="tabs">
                    <div class="tab active" onclick="filterLogs('all')">Todas</div>
                    <div class="tab" onclick="filterLogs('cpf')">CPF</div>
                    <div class="tab" onclick="filterLogs('nome')">Nome</div>
                    <div class="tab" onclick="filterLogs('numero')">N√∫mero</div>
                </div>
            </div>

            <div class="logs-container" id="logsContainer">
                <div class="empty-state">
                    <div class="empty-state-icon">üì°</div>
                    <p>Aguardando consultas...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // LocalStorage cache management
        const CACHE_PREFIX = 'mutanox_cache_';
        const CACHE_DURATION = 30 * 60 * 1000; // 30 minutes

        function getCachedData(type, param) {
            const key = CACHE_PREFIX + type + '_' + param.toLowerCase().trim();
            const cached = localStorage.getItem(key);
            if (!cached) return null;

            const data = JSON.parse(cached);
            const now = Date.now();
            if (now - data.timestamp > CACHE_DURATION) {
                localStorage.removeItem(key);
                return null;
            }

            return data;
        }

        function setCachedData(type, param, result) {
            const key = CACHE_PREFIX + type + '_' + param.toLowerCase().trim();
            const cacheEntry = {
                timestamp: Date.now(),
                result: result
            };
            localStorage.setItem(key, JSON.stringify(cacheEntry));
        }

        function clearCache() {
            const keys = Object.keys(localStorage);
            keys.forEach(key => {
                if (key.startsWith(CACHE_PREFIX)) {
                    localStorage.removeItem(key);
                }
            });
            document.getElementById('cacheInfo').style.display = 'none';
            alert('Cache limpo com sucesso!');
        }

        function showCacheInfo() {
            document.getElementById('cacheInfo').style.display = 'flex';
        }

        // WebSocket connection
        let ws = null;
        let historyChart = null;
        let distributionChart = null;
        let stats = {
            totalQueries: 0,
            cpfQueries: 0,
            nameQueries: 0,
            numberQueries: 0,
            successfulQueries: 0,
            failedQueries: 0,
            startTime: new Date().toISOString()
        };

        let logs = [];
        let currentFilter = 'all';

        function connectWebSocket() {
            if (ws) {
                console.log('[WebSocket] J√° existe uma conex√£o');
                return;
            }

            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            const wsUrl = `${protocol}//${window.location.hostname}:8080`;

            console.log('[WebSocket] URL:', wsUrl);

            try {
                ws = new WebSocket(wsUrl);

                ws.onopen = () => {
                    console.log('[WebSocket] ‚úÖ Conectado');
                    updateConnectionStatus(true);
                };

                ws.onmessage = (event) => {
                    try {
                        const data = JSON.parse(event.data);

                        if (data.type === 'stats') {
                            updateStats(data.data);
                        } else if (data.type === 'query') {
                            addLog(data.data);
                        }
                    } catch (error) {
                        console.error('[WebSocket] ‚ùå Erro ao processar mensagem:', error);
                    }
                };

                ws.onclose = () => {
                    console.log('[WebSocket] üîå Desconectado');
                    updateConnectionStatus(false);
                    ws = null;
                    setTimeout(() => connectWebSocket(), 5000);
                };

                ws.onerror = (error) => {
                    console.error('[WebSocket] ‚ùå Erro de conex√£o:', error);
                    updateConnectionStatus(false);
                };
            } catch (error) {
                console.error('[WebSocket] ‚ùå Erro ao conectar:', error);
            }
        }

        function updateConnectionStatus(connected) {
            const dot = document.getElementById('statusDot');
            const text = document.getElementById('statusText');

            if (connected) {
                dot.classList.remove('offline');
                text.textContent = 'Conectado';
            } else {
                dot.classList.add('offline');
                text.textContent = 'Desconectado';
            }
        }

        function updateStats(data) {
            stats = data;
            document.getElementById('totalQueries').textContent = data.totalQueries.toLocaleString();
            document.getElementById('cpfQueries').textContent = data.cpfQueries.toLocaleString();
            document.getElementById('nameQueries').textContent = data.nameQueries.toLocaleString();
            document.getElementById('numberQueries').textContent = data.numberQueries.toLocaleString();

            const total = data.totalQueries || 1;
            const successRate = ((data.successfulQueries / total) * 100).toFixed(1);
            document.getElementById('successRate').textContent = successRate + '%';

            const uptime = Math.floor((Date.now() - new Date(data.startTime)) / 1000);
            document.getElementById('uptime').textContent = formatUptime(uptime);

            updateCharts();
        }

        function formatUptime(seconds) {
            if (seconds < 60) return seconds + 's';
            if (seconds < 3600) return Math.floor(seconds / 60) + 'm';
            if (seconds < 86400) return Math.floor(seconds / 3600) + 'h';
            return Math.floor(seconds / 86400) + 'd';
        }

        function addLog(data) {
            logs.unshift(data);
            if (logs.length > 100) logs.pop();

            renderLogs();
        }

        function filterLogs(type) {
            currentFilter = type;

            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            event.target.classList.add('active');

            renderLogs();
        }

        function renderLogs() {
            const container = document.getElementById('logsContainer');
            const filteredLogs = currentFilter === 'all'
                ? logs
                : logs.filter(log => log.type === currentFilter);

            if (filteredLogs.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üì°</div>
                        <p>Aguardando consultas...</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = filteredLogs.map(log => `
                <div class="log-item">
                    <div class="log-type">${log.type}</div>
                    <div class="log-param">${log.parameter}</div>
                    <div class="log-status ${log.success ? 'success' : 'error'}">
                        ${log.success ? '‚úÖ' : '‚ùå'}
                    </div>
                    <div class="log-time">${formatTime(log.timestamp)}</div>
                </div>
            `).join('');
        }

        function formatTime(timestamp) {
            const date = new Date(timestamp);
            return date.toLocaleTimeString('pt-BR');
        }

        function updatePlaceholder() {
            const type = document.getElementById('queryType').value;
            const label = document.getElementById('paramLabel');
            const input = document.getElementById('queryParam');

            if (type === 'cpf') {
                label.textContent = 'CPF (apenas n√∫meros)';
                input.placeholder = 'Digite o CPF...';
            } else if (type === 'nome') {
                label.textContent = 'Nome completo';
                input.placeholder = 'Digite o nome completo...';
            } else {
                label.textContent = 'N√∫mero com DDD';
                input.placeholder = 'Digite o n√∫mero (ex: 11999999999)...';
            }
        }

        async function submitQuery() {
            const type = document.getElementById('queryType').value;
            const param = document.getElementById('queryParam').value.trim();

            if (!param) {
                alert('Por favor, preencha o campo de busca.');
                return;
            }

            // Check cache
            const cached = getCachedData(type, param);
            if (cached) {
                console.log('[Cache] ‚úÖ Dados encontrados no cache');
                showCacheInfo();
                displayResult(type, param, cached.result);
                return;
            }

            // Make API request
            const btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span>‚è≥</span><span>Consultando...</span>';

            try {
                const url = type === 'cpf'
                    ? `/api/consultas?tipo=cpf&cpf=${encodeURIComponent(param)}`
                    : `/api/consultas?tipo=${type}&q=${encodeURIComponent(param)}`;

                const response = await fetch(url);
                const result = await response.json();

                // Cache the result
                setCachedData(type, param, result);

                displayResult(type, param, result);
            } catch (error) {
                console.error('[Query] Erro:', error);
                alert('Erro ao fazer consulta. Tente novamente.');
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<span>üîç</span><span>Consultar</span>';
            }
        }

        function displayResult(type, param, result) {
            const container = document.getElementById('resultsContainer');
            const isSuccess = result.success;

            let content = '';

            if (type === 'cpf' && isSuccess) {
                content = formatCPFResult(result.data);
            } else if (type === 'nome' && isSuccess) {
                content = formatNomeResult(result);
            } else if (type === 'numero' && isSuccess) {
                content = formatNumeroResult(result);
            } else {
                content = `<div style="color: #ef4444; padding: 20px;">
                    <strong>Erro:</strong> ${result.error || 'Consulta sem sucesso'}
                </div>`;
            }

            const resultHtml = `
                <div class="result-item">
                    <div class="result-header">
                        <span class="result-type ${type}">${type}</span>
                        <span class="result-status ${isSuccess ? 'success' : 'error'}">
                            ${isSuccess ? 'Sucesso' : 'Erro'}
                        </span>
                    </div>
                    <div class="result-param">${type === 'cpf' ? maskCPF(param) : param}</div>
                    <div style="margin-top: 12px;">
                        ${content}
                    </div>
                </div>
            `;

            // Add to container
            const emptyState = container.querySelector('.empty-state');
            if (emptyState) {
                container.innerHTML = resultHtml;
            } else {
                container.insertAdjacentHTML('afterbegin', resultHtml);
            }
        }

        function formatCPFResult(data) {
            const basic = data.basicData || {};
            const economic = data.economicData || {};
            const addresses = data.addresses || [];

            return `
                <div style="display: grid; gap: 16px;">
                    <div>
                        <strong style="color: #3b82f6;">üìÑ Dados B√°sicos</strong>
                        <p style="margin: 8px 0;"><strong>Nome:</strong> ${basic.name || 'N/A'}</p>
                        <p style="margin: 4px 0;"><strong>CPF:</strong> ${basic.cpf || 'N/A'}</p>
                        <p style="margin: 4px 0;"><strong>Nascimento:</strong> ${basic.birthDate || 'N/A'}</p>
                        <p style="margin: 4px 0;"><strong>Sexo:</strong> ${basic.sex || 'N/A'}</p>
                    </div>
                    ${addresses.length > 0 ? `
                    <div>
                        <strong style="color: #8b5cf6;">üè† Endere√ßos (${addresses.length})</strong>
                        ${addresses.map(addr => `
                            <p style="margin: 4px 0;">${addr.street || ''} - ${addr.neighborhood || ''} - ${addr.cityUF || ''}</p>
                        `).join('')}
                    </div>
                    ` : ''}
                </div>
            `;
        }

        function formatNomeResult(result) {
            const results = result.results || [];
            return `
                <div style="margin-top: 12px;">
                    <strong style="color: #8b5cf6;">üìä ${results.length} resultados encontrados</strong>
                    ${results.slice(0, 5).map(person => `
                        <div style="background: rgba(15, 23, 42, 0.3); padding: 12px; border-radius: 8px; margin-top: 8px;">
                            <p style="margin: 0;"><strong>${person.name || 'N/A'}</strong></p>
                            <p style="margin: 4px 0; color: #94a3b8;">CPF: ${person.cpf || 'N/A'}</p>
                            <p style="margin: 4px 0; color: #94a3b8;">Nascimento: ${person.birthDate || 'N/A'}</p>
                        </div>
                    `).join('')}
                    ${results.length > 5 ? `<p style="margin-top: 8px; color: #94a3b8;">...e mais ${results.length - 5} resultados</p>` : ''}
                </div>
            `;
        }

        function formatNumeroResult(result) {
            const results = result.results || [];
            return `
                <div style="margin-top: 12px;">
                    <strong style="color: #22c55e;">üì± ${results.length} resultados encontrados</strong>
                    ${results.slice(0, 5).map(person => `
                        <div style="background: rgba(15, 23, 42, 0.3); padding: 12px; border-radius: 8px; margin-top: 8px;">
                            <p style="margin: 0;"><strong>${person.name || 'N/A'}</strong></p>
                            <p style="margin: 4px 0; color: #94a3b8;">CPF/CNPJ: ${person.cpfCnpj || 'N/A'}</p>
                            <p style="margin: 4px 0; color: #94a3b8;">Cidade: ${person.cityUF || 'N/A'}</p>
                        </div>
                    `).join('')}
                    ${results.length > 5 ? `<p style="margin-top: 8px; color: #94a3b8;">...e mais ${results.length - 5} resultados</p>` : ''}
                </div>
            `;
        }

        function maskCPF(cpf) {
            if (!cpf || cpf.length < 11) return cpf;
            return cpf.substring(0, 3) + '***' + cpf.substring(cpf.length - 2);
        }

        // Charts
        function initCharts() {
            const historyCtx = document.getElementById('historyChart').getContext('2d');
            historyChart = new Chart(historyCtx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [
                        {
                            label: 'CPF',
                            data: [],
                            borderColor: '#3b82f6',
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Nome',
                            data: [],
                            borderColor: '#8b5cf6',
                            backgroundColor: 'rgba(139, 92, 246, 0.1)',
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'N√∫mero',
                            data: [],
                            borderColor: '#22c55e',
                            backgroundColor: 'rgba(34, 197, 94, 0.1)',
                            fill: true,
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: { color: '#e2e8f0' }
                        }
                    },
                    scales: {
                        x: {
                            grid: { color: 'rgba(255,255,255,0.05)' },
                            ticks: { color: '#94a3b8' }
                        },
                        y: {
                            grid: { color: 'rgba(255,255,255,0.05)' },
                            ticks: { color: '#94a3b8' }
                        }
                    }
                }
            });

            const distributionCtx = document.getElementById('distributionChart').getContext('2d');
            distributionChart = new Chart(distributionCtx, {
                type: 'bar',
                data: {
                    labels: ['CPF', 'Nome', 'N√∫mero'],
                    datasets: [{
                        label: 'Consultas',
                        data: [0, 0, 0],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(139, 92, 246, 0.8)',
                            'rgba(34, 197, 94, 0.8)'
                        ],
                        borderColor: [
                            '#3b82f6',
                            '#8b5cf6',
                            '#22c55e'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            grid: { display: false },
                            ticks: { color: '#e2e8f0' }
                        },
                        y: {
                            grid: { color: 'rgba(255,255,255,0.05)' },
                            ticks: { color: '#94a3b8' }
                        }
                    }
                }
            });
        }

        function updateCharts() {
            // Update distribution chart
            if (distributionChart) {
                distributionChart.data.datasets[0].data = [
                    stats.cpfQueries,
                    stats.nameQueries,
                    stats.numberQueries
                ];
                distributionChart.update();
            }

            // Simulate history data based on stats
            if (historyChart) {
                const now = new Date();
                const labels = [];
                const cpfData = [];
                const nomeData = [];
                const numData = [];

                for (let i = 9; i >= 0; i--) {
                    const time = new Date(now - i * 60000);
                    labels.push(time.toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' }));
                    cpfData.push(Math.max(0, stats.cpfQueries * (1 - i * 0.08) + Math.random() * 5));
                    nomeData.push(Math.max(0, stats.nameQueries * (1 - i * 0.08) + Math.random() * 5));
                    numData.push(Math.max(0, stats.numberQueries * (1 - i * 0.08) + Math.random() * 5));
                }

                historyChart.data.labels = labels;
                historyChart.data.datasets[0].data = cpfData;
                historyChart.data.datasets[1].data = nomeData;
                historyChart.data.datasets[2].data = numData;
                historyChart.update();
            }
        }

        // Enter key support
        document.getElementById('queryParam').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                submitQuery();
            }
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            initCharts();
            connectWebSocket();

            // Fetch initial stats
            fetch('/api/stats')
                .then(res => res.json())
                .then(data => updateStats(data))
                .catch(err => console.error('Error fetching stats:', err));
        });
    </script>
</body>
</html>